<div class="col-md-6 col-md-offset-3 panel panel-default">
<div class="panel-body">
<h2>Create an account</h2>
<%= form_for @account do |f|%>

  <div class="input-group">
    <%=f.label :subdomain%>
    <%=f.text_field :subdomain,class: "form-control"%>
    <span class="input-group-addon">.timetracker.dev</span>
  </div>
  <%=f.fields_for :owner do |o|%>
    <div class="input-group">
      <%=o.label :name%>
      <%=o.text_field :name,class: "form-control"%>
    </div>
    <div class="input-group">
      <%=o.label :email%>
      <%=o.text_field :email,class: "form-control"%>
    </div>
    <div class="input-group">
      <%=o.label :password%>
      <%=o.text_field :password,class: "form-control"%>
    </div>
    <div class="input-group">
      <%=o.label :password_confirmation%>
      <%=o.text_field :password_confirmation,class: "form-control"%>
    </div>
   <%end%>
  <%= f.submit%>
  <%end%>
  </div>
  </div>